<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- Disable the second-level cache -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCachingRegionFactory</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class ="ar.edu.unq.eperdemic.modelo.Patogeno" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.Vector" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.Ubicacion" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.Especie" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.Mutacion" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.StateMutacionDefensa" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.StateMutacionContagioAAnimal" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.StateMutacionContagioAInsecto" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.StateMutacionContagioAPersona" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.StateMutacionLetalidad" ></mapping>
        <mapping class ="ar.edu.unq.eperdemic.modelo.Usuario" ></mapping>

    </session-factory>
</hibernate-configuration>